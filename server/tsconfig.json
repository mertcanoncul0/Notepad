{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    // build output settings
    "outDir": "./dist",  // Output dosyalarını 'dist' klasörüne yönlendirir
    "noEmit": false  // Çıktı dosyası üretmek için bu ayarı 'false' yapmalısınız
  },
  "include": ["."],  // Kendi proje yapınıza göre dosyalarınızı dahil edin
  "exclude": ["node_modules"]  // 'node_modules' klasörünü hariç tutun
}
